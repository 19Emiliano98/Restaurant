@model MVC.Models.Dish

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plato</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="DishId" />
            
            <div class="form-group">
                <label asp-for="DishName" class="control-label"></label>
                <input asp-for="DishName" class="form-control" />
                <span asp-validation-for="DishName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DishCategory" class="control-label"></label>
                <select asp-for="DishCategory" class="form-control" asp-items="ViewBag.EditPlato"></select>
                <span asp-validation-for="DishCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DishFinishTime" class="control-label"></label>
                <input asp-for="DishFinishTime" class="form-control" />
                <span asp-validation-for="DishFinishTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DishPrice" class="control-label"></label>
                <input asp-for="DishPrice" class="form-control" />
                <span asp-validation-for="DishPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DishTac" class="control-label"></label>
                <input asp-for="DishTac" class="form-control" />
                <span asp-validation-for="DishTac" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetDishes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}